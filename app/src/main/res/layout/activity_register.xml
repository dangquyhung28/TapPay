<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    >
    <ImageView
        android:id="@+id/btn_backRegister"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/icon_back_40"
        android:layout_width="40dp"
        android:layout_height="40dp">
    </ImageView>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="340dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="Hello, please register if you don't have an account."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/et_username"
        android:hint="Username"
        android:layout_marginTop="28dp"
        android:padding="8dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_background"
        android:layout_width="330dp"
        android:layout_height="46dp">

    </EditText>
    <EditText
        android:id="@+id/et_emailRegister"
        android:hint="Email"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_background"
        android:layout_width="330dp"
        android:layout_height="46dp">

    </EditText>
    <EditText
        android:id="@+id/et_password"
        android:layout_marginTop="12dp"
        android:hint="Password"
        android:padding="8dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_background"
        android:layout_width="330dp"
        android:layout_height="46dp">

    </EditText>

    <EditText
        android:id="@+id/et_confirmPassword"
        android:layout_marginTop="12dp"
        android:hint="Confirm password"
        android:padding="8dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_background"
        android:layout_width="330dp"
        android:layout_height="46dp">

    </EditText>

    <Button
        android:id="@+id/btn_registerRegister"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@null"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button_background"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    <TextView
        android:text="Or Register with"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_registerFb"
            android:background="@drawable/rounded_textview_background"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:drawableStart="@drawable/icon_facebook_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/btn_registerGg"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_textview_background"
            android:padding="16dp"
            android:drawableStart="@drawable/icon_google_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/btn_registerApple"
            android:background="@drawable/rounded_textview_background"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/icon_apple_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:text="Already have an account? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tv_registarNow"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Login Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

</LinearLayout>